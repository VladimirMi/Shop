<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:bind="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="ru.mikhalev.vladimir.mvpauth.R"/>

        <variable
            name="presenter"
            type="ru.mikhalev.vladimir.mvpauth.auth.AuthPresenter"/>
    </data>

    <android.support.design.widget.CoordinatorLayout
        android:id="@+id/coordinator_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background"
        android:fitsSystemWindows="true"

        tools:context="ru.mikhalev.vladimir.mvpauth.auth.SplashActivity">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_medium_36"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/logo"
                    android:layout_width="@dimen/logo_width"
                    android:layout_height="@dimen/logo_height"
                    android:src="@drawable/firebase_icon"/>

                <TextView
                    android:id="@+id/app_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/spacing_normal_16"
                    android:text="@string/app_name"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/font_largest_40"
                    bind:font="@{@string/font_nueu_book}"/>
            </LinearLayout>

            <com.bhargavms.dotloader.DotLoader
                android:id="@+id/dot_loader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/spacing_small_8"
                android:visibility="invisible"
                app:color_array="@array/dot_colors"
                app:dot_radius="6dp"
                app:number_of_dots="3"/>

            <ru.mikhalev.vladimir.mvpauth.auth.AuthPanel
                android:id="@+id/auth_panel"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@id/social_wrapper"
                android:gravity="bottom"
                android:orientation="vertical">

                <android.support.v7.widget.CardView
                    android:id="@+id/auth_card"
                    style="@style/CustomCard.LoginCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    tools:visibility="visible">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/email"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <android.support.design.widget.TextInputEditText
                                android:id="@+id/email_et"
                                style="@style/AuthField"
                                android:hint="@string/text.email"
                                android:inputType="textEmailAddress"
                                android:text="@={presenter.email}"/>
                        </android.support.design.widget.TextInputLayout>

                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/password"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <android.support.design.widget.TextInputEditText
                                android:id="@+id/password_et"
                                style="@style/AuthField"
                                android:hint="@string/text.password"
                                android:inputType="textPassword"
                                android:text="@={presenter.password}"/>
                        </android.support.design.widget.TextInputLayout>

                    </LinearLayout>

                </android.support.v7.widget.CardView>

                <Button
                    android:id="@+id/show_catalog_btn"
                    style="@style/CustomButton"
                    android:text="@string/text.show_catalog"
                    android:theme="@style/ShowBtn"/>

                <Button
                    android:id="@+id/login_btn"
                    style="@style/CustomButton"
                    android:text="@string/text.login"
                    android:theme="@style/StartBtn"/>
            </ru.mikhalev.vladimir.mvpauth.auth.AuthPanel>

            <LinearLayout
                android:id="@+id/social_wrapper"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/fb_btn"
                    style="@style/SocialBtn"
                    android:background="@drawable/fb_selector_btn"/>

                <ImageButton
                    android:id="@+id/tw_btn"
                    style="@style/SocialBtn"
                    android:background="@drawable/tw_selector_btn"/>

                <ImageButton
                    android:id="@+id/vk_btn"
                    style="@style/SocialBtn"
                    android:background="@drawable/vk_selector_btn"/>

            </LinearLayout>
        </RelativeLayout>
    </android.support.design.widget.CoordinatorLayout>
</layout>

<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:bind="http://schemas.android.com/tools">

    <data>

        <import type="ru.mikhalev.vladimir.mvpauth.R"/>
        <variable
            name="product"
            type="ru.mikhalev.vladimir.mvpauth.product.ProductDto"/>
    </data>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.CardView
            style="@style/CustomCard.ProductCard">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    style="@style/CustomText.ProductTitle"
                    android:text="@{product.productName}"/>

                <TextView
                    style="@style/CustomText.ProductDescription"
                    android:text="@{product.description}"/>

                <ru.mikhalev.vladimir.mvpauth.core.ui.AspectRatioImageView
                    android:layout_width="wrap_content"
                    android:layout_height="180dp"
                    android:layout_marginTop="@dimen/spacing_small_8"
                    android:paddingBottom="@dimen/spacing_normal_16"
                    android:scaleType="centerCrop"
                    bind:image="@{product.imageUrl}"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:paddingTop="@dimen/spacing_medium_24">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            style="@style/CustomText.LabelPrice"
                            android:text="Количество"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <ImageButton
                                android:id="@+id/minus"
                                style="@style/CountButton"
                                android:src="@drawable/ic_minus_24dp"/>

                            <TextView
                                style="@style/CustomText.ValuePrice"
                                android:text='@{""+product.count}'/>

                            <ImageButton
                                android:id="@+id/plus"
                                style="@style/CountButton"
                                android:src="@drawable/ic_plus_24dp"/>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            style="@style/CustomText.LabelPrice"
                            android:text="Стоимость"/>

                        <TextView
                            style="@style/CustomText.ValuePrice"
                            android:text='@{""+(product.count==0 ? product.price : product.price*product.count)+".-"}'/>
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

        </android.support.v7.widget.CardView>

    </android.support.v4.widget.NestedScrollView>
</layout>
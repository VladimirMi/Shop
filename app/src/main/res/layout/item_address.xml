<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    >

    <ImageView
        style="@style/Icon.Account"
        android:src="@drawable/ic_place_black_24dp"
        tools:ignore="ContentDescription"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:orientation="vertical"
        >

        <TextView
            style="@style/CustomText.AccountLabel"
            android:text="@string/account.home.title"
            />

        <TextView
            android:id="@+id/address"
            style="@style/CustomText.AccountValue"
            tools:text="@string/account.home.sample"
            />

        <TextView
            style="@style/CustomText.AccountLabel"
            android:text="@string/account.comment.title"
            />

        <TextView
            android:id="@+id/comment"
            style="@style/CustomText.AccountValue"
            tools:text="@string/account.comment.sample"
            />

        <View
            style="@style/HorizontalDivider"/>

    </LinearLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:bind="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="ru.mikhalev.vladimir.mvpauth.catalog.ProductViewModel"/>

        <variable
            name="actionsHandler"
            type="ru.mikhalev.vladimir.mvpauth.catalog.ProductView"/>
    </data>

    <ru.mikhalev.vladimir.mvpauth.catalog.ProductView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.CardView
            style="@style/CustomCard.ProductCard">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    style="@style/CustomText.ProductTitle"
                    android:text="@{viewModel.productName}"
                    android:maxLines="1"
                    android:ellipsize="end"
                    tools:text="Название"/>

                <TextView
                    style="@style/CustomText.ProductDescription"
                    android:text="@{viewModel.description}"
                    tools:text="Описание"/>

                <ru.mikhalev.vladimir.mvpauth.core.ui.AspectRatioImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/spacing_small_8"
                    android:paddingBottom="@dimen/spacing_normal_16"
                    android:scaleType="centerInside"
                    bind:image="@{viewModel.imageUrl}"
                    tools:ignore="ContentDescription"
                    tools:src="@drawable/background"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:paddingTop="@dimen/spacing_medium_24"
                    android:baselineAligned="false">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            style="@style/CustomText.LabelPrice"
                            android:text="@string/product.count"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <ImageButton
                                android:id="@+id/minus"
                                style="@style/CountButton"
                                bind:onClick="@{actionsHandler::clickOnMinus}"
                                android:src="@drawable/ic_minus_24dp"
                                tools:ignore="ContentDescription"/>

                            <TextView
                                style="@style/CustomText.ValuePrice"
                                android:text="@{String.valueOf(viewModel.count)}"/>

                            <ImageButton
                                android:id="@+id/plus"
                                style="@style/CountButton"
                                bind:onClick="@{actionsHandler::clickOnPlus}"
                                android:src="@drawable/ic_plus_24dp"
                                tools:ignore="ContentDescription"/>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            style="@style/CustomText.LabelPrice"
                            android:text="@string/product.price"/>

                        <TextView
                            style="@style/CustomText.ValuePrice"
                            android:text="@{String.valueOf(viewModel.price * viewModel.count)}"/>
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

        </android.support.v7.widget.CardView>

    </ru.mikhalev.vladimir.mvpauth.catalog.ProductView>
</layout>
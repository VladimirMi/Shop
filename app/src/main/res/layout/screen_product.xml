<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:bind="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
    >

    <data>

        <variable
            name="viewModel"
            type="ru.mikhalev.vladimir.mvpshop.features.catalog.product.ProductViewModel"
            />

        <variable
            name="actionsHandler"
            type="ru.mikhalev.vladimir.mvpshop.features.catalog.product.IProductActions"
            />
    </data>

    <ru.mikhalev.vladimir.mvpshop.features.catalog.product.ProductView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <android.support.v7.widget.CardView
            style="@style/CustomCard.ProductCard">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >

                <ImageView
                    android:layout_width="96dp"
                    android:layout_height="96dp"
                    app:srcCompat="@drawable/ic_shopping_cart_color_primary_dark_24dp"
                    />

                <TextView
                    style="@style/CustomText.ProductTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Товар добавлен в корзину"
                    android:textColor="@color/color_primary_dark"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/product_wrapper"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:foreground="@color/transparent"
                android:orientation="vertical"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >

                    <TextView
                        style="@style/CustomText.ProductTitle"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/spacing_small_12"
                        android:text="@{viewModel.productName}"
                        bind:font="@{@string/font_roboto_medium}"
                        tools:text="Название"
                        />

                    <TextView
                        style="@style/CustomText.ProductDescription"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/spacing_small_8"
                        android:gravity="center"
                        android:text="@{viewModel.description}"
                        tools:text="Emeritis triticum foris pugnas vox est.Contencio superbus mensa est.Mirabilis competition saepe imperiums absolutio est.Candidatus bassus eleates est."
                        />
                </LinearLayout>


                <ru.mikhalev.vladimir.mvpshop.ui.AspectRatioImageView
                    android:id="@+id/aspectRatioImageView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_small_8"
                    bind:image="@{viewModel.imageUrl}"
                    tools:ignore="ContentDescription"
                    tools:src="@drawable/nav_header_bg"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/spacing_small_8"
                    android:layout_marginTop="@dimen/spacing_small_8"
                    android:baselineAligned="false"
                    android:orientation="horizontal"
                    >

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical"
                        >

                        <TextView
                            style="@style/CustomText.LabelPrice"
                            android:text="@string/product.count"
                            />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="horizontal"
                            >

                            <ImageButton
                                android:id="@+id/minus"
                                style="@style/CountButton"
                                android:layout_marginEnd="@dimen/spacing_small_8"
                                android:layout_marginRight="@dimen/spacing_small_8"
                                app:srcCompat="@drawable/ic_minus_24dp"
                                bind:onClick="@{actionsHandler::clickOnMinus}"
                                tools:ignore="ContentDescription"
                                />

                            <TextView
                                style="@style/CustomText.ValuePrice"
                                android:gravity="center_vertical"
                                android:text="@{String.valueOf(viewModel.count)}"
                                tools:text="1"
                                />

                            <ImageButton
                                android:id="@+id/plus"
                                style="@style/CountButton"
                                android:layout_marginLeft="@dimen/spacing_small_8"
                                android:layout_marginStart="@dimen/spacing_small_8"
                                app:srcCompat="@drawable/ic_plus_24dp"
                                bind:onClick="@{actionsHandler::clickOnPlus}"
                                tools:ignore="ContentDescription"
                                />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical"
                        >

                        <TextView
                            style="@style/CustomText.LabelPrice"
                            android:text="@string/product.price"
                            />

                        <TextView
                            style="@style/CustomText.ValuePrice"
                            android:gravity="center_vertical"
                            android:text="@{String.valueOf(viewModel.price * viewModel.count)}"
                            tools:text="999"
                            />
                    </LinearLayout>
                </LinearLayout>

                <View style="@style/HorizontalDivider"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    >

                    <Button
                        style="?attr/borderlessButtonStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:text="Подробнее"
                        android:textColor="@color/color_accent"
                        bind:onClick="@{actionsHandler::clickOnShowMore}"
                        />

                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/spacing_normal_16"
                        android:button="@drawable/favorite_selector_btn"
                        android:checked="@{viewModel.favorite}"
                        bind:onClick="@{actionsHandler::clickOnFavorite}"
                        />
                </RelativeLayout>
            </LinearLayout>

        </android.support.v7.widget.CardView>

    </ru.mikhalev.vladimir.mvpshop.features.catalog.product.ProductView>
</layout>